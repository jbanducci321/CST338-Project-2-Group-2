<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/questionCount"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="12dp"
        android:text="1/10"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMainQuestionDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="4"
        android:padding="12dp"
        android:text="Question?"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionCount" />

    <Button
        android:id="@+id/textViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a"
        android:minWidth="120dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewMainQuestionDisplay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/textViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b"
        android:minWidth="120dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewA"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/textViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c"
        android:minWidth="120dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewB"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/textViewD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/d"
        android:minWidth="120dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewC"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>